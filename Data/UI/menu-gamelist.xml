<?xml version="1.0" encoding="utf-8"?>
<LinearLayout align="fill" orientation="vertical" padding="16" background_image="Window-Pirates">

	<Label id="resume_label" text="Resume Game" align="topfill" text_font="Priest" text_align="center" text_height="50" text_colour="orange" />

	<LinearLayout align="fill" orientation="horizontal" margin="5">
		<!-- Put the game list on the left -->
		<Listbox id="activegames" align="fill" weight="0.7" background_colour="black" />

		<!-- And some info about the selection on the right -->
		<Frame align="fill" margin="5">

			<LinearLayout align="fill" orientation="vertical">
				<!-- Game name entry box, only visible on join-game screen -->
				<LinearLayout id="gameNamePanel" align="topfill" orientation="horizontal" visible="gone">
					<Label text="Game :  " align="centerleft" text_font="FranklinGothic"  text_colour="yellow" />
					<Textbox id="gameName" align="topfill" text_font="FranklinGothic" text_colour="white" />
				</LinearLayout>

				<!-- Game details -->
				<Label text="Game Info..." align="topfill" text_font="FranklinGothic" text_align="center" text_height="30" text_colour="white" />
				<!-- Game details go here... -->
			</LinearLayout>

			<!-- And buttons on the bottom -->
			<LinearLayout align="bottomCenter" orientation="horizontal">
				<!-- Place 2 buttons side by side, with a little spacer in the middle -->
				<Button id="resume" size="64,64" background_image="Tickicon" />
				<Widget width="32" />
				<Button id="return" size="64,64" background_image="Undoicon" />
			</LinearLayout>

		</Frame>
	</LinearLayout>

</LinearLayout>
