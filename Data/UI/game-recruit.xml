<?xml version="1.0" encoding="utf-8"?>
<Frame size="480,320" align="center" background_image="Window-Pirates">

	<!-- The window -->
	<LinearLayout align="fill" orientation="vertical" padding="10">

		<Label text="Swordhenge" align="topCenter" style="game-label" margin="4" />

		<!-- heroes span the top top -->
		<LinearLayout align="topCenter" orientation="horizontal" margin="5">
			<UnitButton id="hero0" style="game-unitbutton" />
			<UnitButton id="hero1" style="game-unitbutton" />
			<UnitButton id="hero2" style="game-unitbutton" />
			<UnitButton id="hero3" style="game-unitbutton" />
			<UnitButton id="hero4" style="game-unitbutton" />
			<UnitButton id="hero5" style="game-unitbutton" />
			<UnitButton id="hero6" style="game-unitbutton" />
			<UnitButton id="hero7" style="game-unitbutton" />
		</LinearLayout>

		<!-- Row separator -->
		<Widget align="topFill" height="16" background_image="Horiz-Pirates" />

		<!-- This frame fills the center region -->
		<LinearLayout align="fill" orientation="horizontal">

			<!-- Hero details -->
			<Frame id="heroDetails" align="fill">
				<Widget id="typeImage" align="center" background_image="Melee" />

				<LinearLayout align="fill" padding="8" orientation="Vertical">
					<Label id="heroName" style="game-text" margin="0,0,0,8" />
					<Label id="heroAtk" style="game-text" />
					<Label id="heroMov" style="game-text" />
					<Label id="heroTurns" style="game-text" />
				</LinearLayout>
			</Frame>

		</LinearLayout>

	</LinearLayout>

	<!-- Close button -->
	<Button id="close" align="topRight" style="game-closebutton" />

</Frame>