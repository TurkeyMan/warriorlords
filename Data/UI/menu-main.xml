	<Label id="welcome_text" text="Main Menu" align="fill" style="menu-label" />

	<Button id="play_game" text="Play Game" align="fillcenter" style="menu-button" />
	<Button id="resume_game" text="Resume Game" align="fillcenter" style="menu-button" />

