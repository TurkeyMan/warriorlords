<?xml version="1.0" encoding="utf-8"?>
<LinearLayout align="fill" orientation="vertical" padding="16" background_image="Window-Pirates">

	<!-- Lobby title -->
	<Label id="lobby_label" text="Lobby" align="Topfill" text_font="Priest" text_align="center" text_height="50" text_colour="orange" />

	<!-- List of players -->
	<LinearLayout align="fill" orientation="vertical">
		<Prefab id="player0" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player1" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player2" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player3" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player4" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player5" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player6" prefab="menu-lobby-row.xml" align="TopFill" />
		<Prefab id="player7" prefab="menu-lobby-row.xml" align="TopFill" />
	</LinearLayout>

	<!-- And buttons on the bottom -->
	<LinearLayout align="TopRight" orientation="horizontal">
		<!-- Place 2 buttons side by side, with a little spacer in the middle -->
		<Button id="start" size="64,64" background_image="Tickicon" />
		<Button id="leave" size="64,64" background_image="Xicon" visible="gone" />
		<Widget width="32" />
		<Button id="return" size="64,64" background_image="Undoicon" />
	</LinearLayout>

</LinearLayout>
